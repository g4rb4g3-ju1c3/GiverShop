@mixin appearance($style) {
   appearance:         $style;
   -moz-appearance:    $style;
   -webkit-appearance: $style;
}

:-moz-placeholder           { color: #808080; font-style: italic; font-size: 75%; } /* Firefox 18- */
::-moz-placeholder          { color: #808080; font-style: italic; font-size: 75%; } /* Firefox 19+ */
::-webkit-input-placeholder { color: #808080; font-style: italic; font-size: 75%; line-height: 1.6em; } /* Chrome/Safari/Opera */
:-ms-input-placeholder      { color: #808080; font-style: italic; font-size: 75%; } /* IE */
::-ms-input-placeholder     { color: #808080; font-style: italic; font-size: 75%; } /* Edge */

label {
   position:    relative;
   top:         -$pad-border;
   font-size:   75%;
   font-weight: bold;
}

input,
textarea,
button,
select {
   @include appearance(none);
   box-sizing: border-box;
   max-width:  100%;
   height:     1.6em;
   margin:     0;
   padding:    $pad-border $pad-medium;
   border:           $border-size solid $control-border-color;
   background-color: $control-bg-color;
   font:             inherit;
	color:            inherit;
}

.item_quantity_text_field {
   height:     auto;
   border:     none;
   padding:    0;
   background-color: $content-bg-color;
   text-align: right;
}

button,
input[type='submit'],
input[type='button'] {
   cursor: pointer;
}

button.min-width,
input[type='submit'].min-width,
input[type='button'].min-width {
   min-width: 5em;
}

input:disabled,
textarea:disabled,
button:disabled,
select:disabled {
   cursor: default;
   color:  $disabled-text-color;
}

textarea {
   resize: none;
   width:  100%;
   height: 2.8em;
}

textarea#note_content {
   font:   normal $font-size-monospaced $font-face-monospaced;
   height: 35em;
